#
# For a description of the syntax of this configuration file,
# see kconfig-language at https://www.kernel.org/doc/Documentation/kbuild/kconfig-language.txt
#

menu "AWS IoT Embedded C SDK"

config AWS_SDK
	bool "AWS SDK"
	default n
	---help---
		include AWS SDK

if AWS_SDK
config AWS_IOT_MQTT_HOST
	string "Customer specific MQTT HOST"
	default "amazonaws.com"
	---help---
		Customer specific MQTT HOST. The same will be used for Thing Shadow

config AWS_IOT_MY_THING_NAME
	string "Thing Name of the Shadow"
	default "ARTIK05x"
	---help---
		Thing Name of the Shadow this device is associated with

config AWS_LOG_DEBUG
	bool "Enable debug log"
	default n

config AWS_LOG_TRACE
	bool "Enable trace log"
	default n

config AWS_LOG_INFO
	bool "Enable information log"
	default y

config AWS_LOG_WARN
	bool "Enable warning log"
	default y

config AWS_LOG_ERROR
	bool "Enable error log"
	default y

endif

endmenu
